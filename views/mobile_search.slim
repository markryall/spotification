div id="search-#{by}s" data-role="page" data-add-back-btn="true"
  div data-role="header"
    h1 Search by #{by}
  div data-role="content"
    form id="search-#{by}s-form"
      label for="search-#{by}s-criteria" Enter #{by} criteria:
      input type="search" name="search-#{by}s-criteria" id="search-#{by}s-criteria" value=""
      input type="submit" value="Search"

div id="#{by}s" data-role="page" data-add-back-btn="true"
  div data-role="header"
    h1 #{by.capitalize} Results
  div class="#{by}s-content" data-role="content"